{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_noscript %}
    {% block wbm_base_tag_manager_noscript %}
        {% if wbmTagManagerConfig.gtmContainerId %}
            <noscript>
                <iframe src="https://www.googletagmanager.com/ns.html?id={{ wbmTagManagerConfig.gtmContainerId|raw }}"
                        height="0" width="0" style="display:none;visibility:hidden"></iframe>
            </noscript>
        {% endif %}
    {% endblock %}
    {{ parent() }}
{% endblock %}

{% block base_body_script %}
    {{ parent() }}
    {% block wbm_base_tag_manager_click_tracking_script %}
        {% if wbmTagManagerConfig.gtmContainerId and dataLayer and wbmTagManagerConfig.isTrackingProductClicks %}
            <script type="text/javascript">
                {% block wbm_base_tag_manager_click_tracking_script_inline %}
                    window.gaRegisterClickTracking = true;
                {% endblock %}
            </script>
        {% endif %}
    {% endblock %}
{% endblock %}
